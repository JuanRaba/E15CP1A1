<h1>New user</h1>

<%= form_with model: @user, local: true do |f| %>
<div class="card col-md-6">
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>  
  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>
  <%= f.submit "Enviar", class: "btn btn-primary" %>
</div>
<% end %>